<view class="self-info">
  <view style="  width:10%;height:100%"></view>
  <view>
    <open-data class="userinfo-avatar" type="userAvatarUrl"></open-data>
  </view>

  <view style="  width:10%;height:100%"></view>

  <view class="name-number">
    <view>
      <text class="text-name">{{user.nickName}}</text>
    </view>
    <view>
      <text style="font-size: 30rpx">{{phone}}</text>
    </view>

  </view>
</view>


<view class="view-area ">
  <view class="view-item" style='border-bottom: 18px solid #f5f5f5;'>

    <view style="  width:3%;height:100%"></view>
    <view class="view-item1">
      <image class="image-item" src="../images/钱.png" mode="scaleToFill"></image>
    </view>
    <view style="  width:3%;height:100%"></view>


    <view class="view-item2" style='border-bottom:none'>
      <text class="text-item"> 我的钱包 </text>
      <image class="image-arrow" src="../images/右.png" mode="scaleToFill"></image>
    </view>

    <view style="width:3%;height:100%"></view>

  </view>


  <view class="view-item" bindtap="phone">


    <view style="  width:3%;height:100%"></view>
    <view class="view-item1">
      <image class="image-item" src="../images/电话3.png" mode="scaleToFill"></image>
    </view>
    <view style="  width:3%;height:100%"></view>


    <view class="view-item2">
      <text class="text-item"> 绑定手机 </text>
      <image class="image-arrow" src="../images/右.png" mode="scaleToFill"></image>
    </view>

    <view style="width:3%;height:100%"></view>

  </view>



  <view class="view-item" bindtap="orders">


    <view style="  width:3%;height:100%"></view>
    <view class="view-item1">
      <image class="image-item" src="../images/我的订单2.png" mode="scaleToFill"></image>
    </view>
    <view style="  width:3%;height:100%"></view>


    <view class="view-item2">
      <text class="text-item"> 我的订单 </text>
      <image class="image-arrow" src="../images/右.png" mode="scaleToFill"></image>
    </view>

    <view style="width:3%;height:100%"></view>

  </view>


  <view class="view-item" bindtap='address'>

    <view style="  width:3%;height:100%"></view>
    <view class="view-item1">
      <image class="image-item" src="../images/地址2.png" mode="scaleToFill"></image>
    </view>
    <view style="  width:3%;height:100%"></view>


    <view class="view-item2">
      <text class="text-item"> 我的地址 </text>
      <image class="image-arrow" src="../images/右.png" mode="scaleToFill"></image>
    </view>

    <view style="width:3%;height:100%"></view>

  </view>





  <view class="view-item" bindtap='AboutUs'>
    <view style="  width:3%;height:100%"></view>
    <view class="view-item1">
      <image class="image-item" src="../images/我的2.png" mode="scaleToFill"></image>
    </view>
    <view style="width:3%;height:100%"></view>

    <view class="view-item2-last">
      <text class="text-item"> 关于我们 </text>
      <image class="image-arrow" src="../images/右.png" mode="scaleToFill"></image>
    </view>

    <view style="width:3%;height:100%"></view>

  </view>



</view>


<view style=" width:100%;height:35%"></view>

<button class='btn' open-type='contact' session-from='weapp'>
  <image src='../images/客服.png' style='height:50px;width:50px;margin-left:-13px'></image>
</button>